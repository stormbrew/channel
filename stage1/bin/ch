#!/usr/bin/env ruby
if ($0 =~ %r{bin/ch$})
  $: << "lib"
end

require 'channel/compiler'

tree = nil

if (ARGV[0])
	File.open(ARGV[0]) {|f|
		tree = Channel::Parser::Tree.parse(f)
	}
else
	tree = Channel::Parser::Tree.parse($stdin)
end

compiled = Channel::Compiler::CompiledTree.new(tree)

puts compiled.inspect_r